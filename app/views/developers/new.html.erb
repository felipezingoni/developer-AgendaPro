<div class="uk-height-medium uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-light mb-5" data-src="https://images.unsplash.com/photo-1622131458859-bb66b22160ff?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2833&q=80" style="background-position: 0 39%;" uk-img>
  <div class="titulo-index m">
    <h1>New coworker</h1>
  </div>
</div>


<div class="row ">
<div class="col-md-6 container">
    <h2>New Developer:</h2>
<div class="panel panel-primary">
    <%= simple_form_for @developer do |f| %>
      <%= f.input :name, label: 'Your Name:', required: true %>
      <%= f.input :position, hint: 'Front-end or Back-end Developer', collection: ["Front-end Developer", "Back-end Developer"], required: true %>
      <%= f.input :description, hint: 'Short Description', required: true %>
      <%= f.input :level, hint: 'From 1 to 5', collection: [1, 2, 3, 4, 5]  %>
      <%= f.input :age, :as => :date,
        :start_year => 1910, :end_year => 2021,
        :order => [:day, :month, :year]  %>
      <%= f.input :startday, label: 'Start year:'%>
      <%= f.input :salary, label: 'Your salary:'%>
      <%= f.input :image %>
      <div class="d-flex justify-content-center m-5">
        <%= f.button :submit  %>
      </div>
    <% end %>
</div>
</div>
</div>
